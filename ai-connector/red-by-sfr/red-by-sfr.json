{
  "meta": {
    "schemaVersion": "1.0.0"
  },
  "data": {
    "type": "blueprint",
    "attributes": {
      "getDocuments": [
        {
          "action": "goToUrl",
          "url": "https://espace-client-red.sfr.fr/facture-fixe/consultation"
        },
        {
          "action": "waitForNetworkIdle"
        },
        {
          "action": "forEach",
          "id": "invoice-links-loop",
          "on": {
            "querySelector": ".sr-download-wrapper a[href]"
          },
          "steps": [
            {
              "action": "getPdf",
              "outputVariable": "new_pdfs"
            },
            {
              "action": "mergeVariables",
              "inputVariable": "new_pdfs",
              "outputVariable": "all_pdfs"
            }
          ]
        },
        {
          "action": "downloadPdfsFromUrls",
          "inputVariable": "all_pdfs"
        }
      ]
    }
  }
}